pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/nuclear77/theGP.git'
            }
        }

        stage('Build Docker') {
            steps {
                sh 'docker build -t flask-app ./app'
            }
        }

        stage('Deploy') {
            steps {
                sh 'sudo systemctl restart flask-app'
                sh 'docker-compose down && docker-compose up -d --build'
            }
        }
    }
}