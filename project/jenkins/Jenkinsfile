pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                url: 'https://github.com/nuclear77/theGP.git'
            }
        }

        stage('Build & Deploy Flask') {
            steps {
                script {
                    // Остановите старый контейнер и запустите новый
                    sh 'docker-compose -f /path/to/your/docker-compose.yml down'
                    sh 'docker-compose -f /path/to/your/docker-compose.yml up -d --build flask-app'
                }
            }
        }
    }

    post {
        success {
            slackSend channel: '#dev', message: 'Деплой успешен: ${BUILD_URL}'
        }
        failure {
            slackSend channel: '#dev', message: 'Деплой провален: ${BUILD_URL}'
        }
    }
}