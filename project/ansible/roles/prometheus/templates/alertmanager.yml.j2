route:
  receiver: 'telegram'
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 3h

receivers:
- name: 'telegram'
  telegram_configs:
  - bot_token: '{{ telegram_bot_token }}'
    chat_id: {{ telegram_chat_id }}
    api_url: https://api.telegram.org
    send_resolved: true
    message: '{{ template "telegram.message" . }}'

templates:
- '/etc/alertmanager/telegram.tmpl'